// Fill right part of the page with profile detail partial
document.querySelector(".candidates-wrapper-right").innerHTML = ("<%= escape_javascript(render 'show_candidate_details', appointment: @appointment) %>");

// Apply some style on active candidate name
document.querySelectorAll(".candidates-wrapper__content__candidate").forEach(candidate => {
  candidate.classList.remove("active");
})
document.querySelector(".candidates-wrapper__content__candidate.c<%=@appointment.candidate.id%>").classList.add("active");