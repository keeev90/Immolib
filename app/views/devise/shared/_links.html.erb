<%- if controller_name != 'sessions' %>
  <p class="mb1">Vous avez déjà un compte ? <%= link_to "Connectez-vous", new_session_path(resource_name), class:"primary bolder" %></p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="mb1">Vous n'avez pas de compte ? <%= link_to "Inscrivez-vous", new_registration_path(resource_name), class:"primary bolder" %></p>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <small><%= link_to "Mot de passe oublié", new_password_path(resource_name), class:"primary" %></small>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Email de confirmation non reçu ?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Email de déblocage non reçu ?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <hr class="hr-grey mb2 mt2">
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% if OmniAuth::Utils.camelize(provider) == 'GoogleOauth2' %>
      <%= link_to omniauth_authorize_path(resource_name, provider), method: :post, class: "btn icon-btn" do %>
        <%= image_tag 'google_logo.png' %> Continuer avec Google
      <% end %>
    <% else %>
      <%= link_to "Continuer avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
    <% end %>
  <% end %>
<% end %>
