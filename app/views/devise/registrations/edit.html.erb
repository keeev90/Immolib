<div class="form-page">
  <div class="form-page__form">
    <h2>Editer mes informations de connexion</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label "Email" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>En attente de confirmation pour : <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label "Nouveau mot de passe" %> <small><i>(laisser vide si vous ne souhaitez pas le modifier)</i></small>
        <% if @minimum_password_length %>
          <small><em><%= @minimum_password_length %> caractères minimum</em></small><br />
        <% end %>
        <%= f.password_field :password, autocomplete: "nouveau-mot-de-passe" %>
      </div>

      <div class="field">
        <%= f.label "Confirmation du nouveau mot de passe" %>
        <%= f.password_field :password_confirmation, autocomplete: "nouveau-mot-de-passe" %>
      </div>

      <div class="field">
        <%= f.label "Mot de passe actuel" %> <small><i>(par sécurité, votre mot de passe actuel est requis pour confirmer vos changements)</i></small>
        <%= f.password_field :current_password, autocomplete: "mot-de-passe-actuel" %>
      </div>

      <div class="actions">
        <%= f.submit "Editer", class: "btn white-btn bg-primary" %>
      </div>
    <% end %>

    <h3>Supprimer mon compte</h3>

    <p>Mécontent(e) ? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sûr de vouloir supprimer votre compte?" }, method: :delete, class: "btn white-btn bg-primary" %></p>

    <div class="form-page__form--links">
      <%= link_to "Retour", edit_user_path(current_user) %>
    </div>
  </div>
</div>