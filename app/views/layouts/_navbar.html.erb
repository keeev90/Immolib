<header>
  <nav class='navbar'>
    <%= link_to root_path, class: 'navbar__brand' do %>
      <div class='logo'></div>
      <h1 class='title'>immolib</h1>
    <% end %>
    <div class='navbar__items'>
      <% if current_user && current_user.is_admin? %>
        <%= link_to 'Administration', admin_root_path %>
      <% end %>
      <% if user_signed_in? %>
        <%= link_to 'Mon espace immolib', user_path(current_user), class: 'item item-active' %>
        <%= link_to 'Me déconnecter', destroy_user_session_path, method: :delete, class: 'item' %>
      <% else %>
        <%= link_to 'Enregistrer un logement', welcome_user_path, class: 'item' %>
        <p class="item connection-btn"> Connexion <i class="fas fa-chevron-down"></i></p>
        <div class="navbar__items__connection__menu">
          <%= link_to 'Se connecter', new_user_session_path, class: 'item primary' %>
          <%= link_to "S'inscrire", new_user_registration_path, class: 'item primary' %>
        </div>
      <% end %>
    </div>
  </nav>
  <div class="hamburger-btn">
    <span class='hamburger-btn__icon'></span>
  </div>
  <nav class='hamburger-menu'>
    <%= link_to root_path, class: 'navbar__brand' do %>
      <div class='logo'></div>
      <h1 class='title'>immolib</h1>
    <% end %>
    <div class='navbar__items'>
      <% if current_user && current_user.is_admin? %>
        <%= link_to 'Administration', admin_root_path %>
      <% end %>
      <% if user_signed_in? %>
        <%= link_to 'Mon espace immolib', user_path(current_user), class: 'item' %>
        <%= link_to 'Me déconnecter', destroy_user_session_path, method: :delete, class: 'item' %>
      <% else %>
        <%= link_to 'Organiser des visites', welcome_user_path, class: 'item' %>
        <p class="item connection-btn"> Connexion <i class="fas fa-chevron-down"></i></p>
        <div class="navbar__items__connection__menu">
          <%= link_to 'Se connecter', new_user_session_path, class: 'item' %>
          <%= link_to "S'inscrire", new_user_registration_path, class: 'item' %>
        </div>
      <% end %>
    </div>
  </nav>
</header>

<%= javascript_include_tag 'navbar.js' %>