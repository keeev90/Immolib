<div class="slot-candidate-wrapper">
  <div class="container">
    <div class="slot-candidate-wrapper__title section-title">
      <h1>Étape 1/3 : sélectionnez un créneau de visite</h1>
      <p>Vous pourrez le modifier à tout moment depuis votre espace immolib</p>
    </div>
  </div>
  <div class="container text-center">
    <div class="slot-candidate-wrapper__calendar">
      <div id='calendar-wrapper'>
        <%= render partial:"appointments/candidate_calendar", locals: {property: @property, slots: @slots, date_arr: @date_arr} %>
      </div>

      <% if !current_user %>
        <div class="slot-candidate-wrapper__calendar__title text-center"> 
          <p> Inscrivez-vous pour sélectionner un créneau. </p>
          <%= link_to "M'inscrire", new_user_registration_path, class:"btn white-btn bg-primary" %>
        </div>
      <% end %>

      <% if current_user && @property.candidates.include?(current_user) %>
        <div class="center-btn">
          <%= link_to "Valider et passer à l'étape suivante", step_2_property_path(@property), class: "btn white-btn bg-primary center-btn" %>
        </div>
      <% else %>
        <div class="center-btn">
          <%= link_to "Merci de sélectionner un créneau", step_2_property_path(@property), class: "btn disabled center-btn"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
